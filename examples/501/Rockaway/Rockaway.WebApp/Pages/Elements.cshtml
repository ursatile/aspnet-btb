<section class="grid-examples">
	<h1>Bootstrap Grid</h1>
	@for (var i = 1; i <= 12; i++) {
		<div class="row">
			@for (var col = 1; col <= i; col++) {
				<div class="col">
					<div>@col</div>
				</div>
			}
		</div>
	}
	<h2>Offset Grids</h2>
	@for (var o = 1; o < 12; o++) {
		<div class="row">
			<div class="col-@o"><div>.col-@o</div></div>
			<div class="col-@(12 - o)"><div>.col-@(12 - o)</div></div>
		</div>
	}

